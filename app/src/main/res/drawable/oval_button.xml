<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="oval">
            <gradient
                android:angle="45"

                android:endColor="#70dce0e8"

                android:startColor="#70cccc63"
                android:type="linear" />
            <stroke android:width="0dp" />

        </shape>
    </item>

    <item>
        <shape
            android:shape="oval">
            <gradient
                android:angle="45"

                android:endColor="#70cccc63"

                android:startColor="#70dce0e8"
                android:type="linear" />
            <stroke android:width="0dp" />

        </shape>

    </item>

</selector>