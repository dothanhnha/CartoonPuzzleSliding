<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">

            <corners android:radius="70dp"/>
            <gradient
                android:angle="45"

                android:endColor="#409fbff2"

                android:startColor="#40005cef"
                android:type="linear" />
            <stroke android:width="0dp" />

        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="70dp"/>
            <gradient
                android:angle="45"

                android:endColor="#40005cef"

                android:startColor="#409fbff2"
                android:type="linear" />
            <stroke android:width="0dp" />

        </shape>

    </item>


</selector>